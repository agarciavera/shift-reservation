- provide :title, "#{ t('application.dashboard') }"
%h1=t('application.dashboard').titleize
= render 'info'
%h3=t('.global_lock_in_status').titleize
%p
  %input{:checked => @global_lock_in_status, :name => "global_lock_checkbox", :type => "checkbox", "data-on-color" => "danger", "data-off-color" => "success"}/
.row
  .col-sm-3
    %h3="#{ t('.delete_all_rooms').titleize}:"
    %p
      =link_to t('.delete_all_rooms').titleize, '#', {class: "btn btn-lg btn-danger"}
  .col-sm-3
    %h3="#{ t('.delete_all_shifts').titleize}:"
    %p
      =link_to t('.delete_all_shifts').titleize, '#', {class: "btn btn-lg btn-danger"}
  .col-sm-3
    %h3="#{ t('.delete_all_users').titleize}:"
    %p
      =link_to t('.delete_all_users').titleize, '#', {class: "btn btn-lg btn-danger"}
  .col-sm-3
    %h3="#{ t('.delete_all_offsprings').titleize}:"
    %p
      =link_to t('.delete_all_offsprings').titleize, '#', {class: "btn btn-lg btn-danger"}


- content_for :javascripts do
  :javascript
    $('input[name="global_lock_checkbox"]').bootstrapSwitch().on('switchChange.bootstrapSwitch', function (event, state) {
      $.post('/myconfig/global_lock_switch')
    });
    
    