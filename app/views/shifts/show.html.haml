- provide(:title, "#{ t 'application.models.shift.shift'} #{@shift.id}")
%h1="#{ (t 'application.models.shift.shift').titleize } #{@shift.id}"
.form
  .form-group
    .control-label
      =(t 'application.models.room.room').titleize
    .form-control.disabled
      =link_to "#{@shift.room.name}", room_path(@shift.room)
  .form-group
    .control-label
      =(t 'application.models.shift.sites_available').titleize
    .form-control
      = "#{@shift.sites_available} (#{@shift.sites_available})"
  .form-group 
    .control-label
      =(t 'application.models.shift.day_of_week').titleize
    .form-control
      =week_day_convert @shift.day_of_week
  .form-group
    .control-label
      =(t 'application.models.shift.start_time').titleize
    .form-control
      =@shift.start_time
  .form-group
    .control-label
      =(t 'application.models.shift.end_time').titleize
    .form-control
      =@shift.end_time
  .form-group
    .control-label
      =(t 'application.models.shift.sites_assigned').titleize
    .form-control
      = @shift.sites_assigned
  .form-group
    .control-label
      =(t 'application.models.shift.sites_reserved').titleize
    .form-control
      = @shift.sites_reserved
  
%p
  = button_to t("application.models.shift.edit_shift").titleize, edit_shift_path(@shift), class: "btn btn-primary"
