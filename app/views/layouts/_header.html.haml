%nav.navbar.navbar-default.navbar-pf{role: "navigation"}
  .navbar-header
    %button.navbar-toggle{"data-target" => ".navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: "/"}
      = image_tag("brand.svg", height: "64", alt: (t 'application.name').to_s)
  .collapse.navbar-collapse.navbar-collapse-1
    %ul.nav.navbar-nav.navbar-utility
      %li
        %a{href: "#"}= user_signed_in? ? t(".signed_in").titleize: t(".not_signed_in").titleize
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
          %span.pficon.pficon-user
          = user_signed_in? ? current_user.first_name : t(".not_identified")
          %b.caret
        %ul.dropdown-menu
          %li
            = link_to  new_user_session_path do
              .fa.fa-sign-in= (t '.log_in').titleize
            
          %li
            = link_to destroy_user_session_path do
              .fa.fa-sign-out= (t '.log_out').titleize 
          %li.divider
          %li
            = link_to new_user_registration_path do
              .fa.fa-user-plus= (t '.sign_up').titleize
          %li.divider
          %li.dropdown-submenu
            %a{href: "#", tabindex: "-1"}= t '.more_options'
            %ul.dropdown-menu
              %li
                = link_to new_admin_session_path do
                  .fa.fa-user-secret= (t '.log_in_as_admin')
          %li.divider
          %li
            = link_to about_path do
              .fa.fa-question-circle-o= (t '.about').titleize 
    %ul.nav.navbar-nav.navbar-primary
      %li
        - if user_signed_in?
          = link_to (t'.user_panel').titleize, user_path(current_user)
        - else
          = link_to (t'.user_panel').titleize, "#"
      %li
        = link_to t('.offsprings').titleize, "#"
      %li
        = link_to t('.rooms').titleize, "#"
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
          = (t ".help").titleize
          %b.caret
          %ul.dropdown-menu
            %li
              = link_to (t '.help').titleize, help_path
              = link_to (t '.info').titleize, info_path
              = link_to (t '.about').titleize, about_path
- content_for :javascripts do
  :javascript
    $(function() {
        // for bootstrap 3 use 'shown.bs.tab', for bootstrap 2 use 'shown' in the next line
        $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            // save the latest tab; use cookies if you like 'em better:
            localStorage.setItem('lastTab', $(this).attr('href'));
        });
        // go to the latest tab, if it exists:
        var lastTab = localStorage.getItem('lastTab');
        if (lastTab) {
            $('[href="' + lastTab + '"]').tab('show');
        }
    });
