<!DOCTYPE html>
%html
  %head
    = render 'layouts/head'
    = yield(:head_javascripts)
  %body
    / = render 'layouts/image'
    - if  admin_signed_in?
      = render 'layouts/admin_header' if admin_signed_in?
    - else
      = render 'layouts/header'
    .container-fluid
      = render 'layouts/flash'
      = yield
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = render 'layouts/debug' if Rails.env.development?
    = yield(:javascripts)
